<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark static-top text-uppercase" id="mainNav">
    <div class="container">
        <a class="navbar-brand" href="/">Welcome, <%= Name %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <!-- Friends Dropdown-->
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Friends</a>
                    <div class="dropdown-menu" id="friendsDDD">
                        <h6 class="dropdown-header">Requests:</h6>
                        <div class="dropdown-divider"></div>
                        <div id="requestList">
                            <% if (fRequests.length == 0) {%>
                                <small>You have no requests at this time.</small>
                            <%} else { %>
                                <% for (i in fRequests) { %>
                                    <div class="dropdown-item" id="<%= fRequests[i].id %>">
                                        <h6> <%= fRequests[i].first%>  <%= fRequests[i].last%></h6>
                                        <span class="text-right">
                                            <input type="button" class="btn btn-primary btn-sm" value="Accept" onclick="acceptRequest('<%= fRequests[i].id %>')">
                                            <input type="button" class="btn btn-light btn-sm" value="Decline" onclick="declineRequest('<%= fRequests[i].id %>')">
                                        </span>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div class="dropdown-item">
                            <h6><a href="/friends">Friends List</a></h6>
                        </div>
                    </div>
                </li>
                <li class="nav-item" id="Jornals">
                    <a class="nav-link" href="/journals">Journals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>